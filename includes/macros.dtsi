/ {
	macros {
		hyper: hyper {
			compatible = "zmk,behavior-macro";
			label = "new_macro";
			#binding-cells = <0>;
			bindings =
				<&macro_press>,
				<&kp LCTRL &kp LSHFT &kp LMETA &kp LEFT_ALT>,
				<&macro_pause_for_release>,
				<&macro_release>,
				<&kp LCTRL &kp LSHFT &kp LMETA &kp LEFT_ALT>;

			wait-ms = <0>;
		};
		layer_menu: layer_menu {
			compatible = "zmk,behavior-macro";
			label = "LAYER_MENU";
			#binding-cells = <0>;
			bindings =
				<&macro_press>,
				<&mo STICKY>,
				<&macro_pause_for_release>,
				<&macro_release>,
				<&mo STICKY>;
		};
	};


};
